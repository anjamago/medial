<!DOCTYPE html>
<html>
  <head>
    <title>Medical</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <title>Medical</title>
  </head>

  <body>
    <nav class="nav navbar navbar-inverse">
      <div class="" id="">
        <a class="navbar-brand" href="<%= root_path %>"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span><%= current_user ? " #{current_user.email}" : '' %></a>
          <input type="number" class="col-md-1 rango" id="min" placeholder="Minimo">
          <input type="number" class="col-md-1 rango" id="max" placeholder="Maximo">
          <input type="text" class="col-md-2 rango" placeholder="Nombre" id="product">
          <input type="text" class="col-md-2 rango" placeholder="Laboratorio" id="labs">

          <button type="submit" class="btn btn-default rango nav_align" id="search" >Search</button>

          <ul class="nav_align">
            <% if !current_user %>
              <li><a  href="<%= user_session_path %>">Log in</a></li>
              <li><a href="<%= new_user_registration_path %>">Sign up</a></li>
            <% else %>
              <li><a href="<%= destroy_user_session_path %>" data-method="delete">Log out</a></li>
            <% end %>
        </ul>
       </div>
    </nav>

    <% if flash[:success] or flash[:error] or flash[:notice]%>
    <span class="flash-message <%= flash[:success] ? 'success' : flash[:error] ? 'error' : flash[:notice] ? 'notice' : '' %>">
      <%= flash[:success] ? flash[:success] : flash[:error] ? flash[:error] : flash[:notice] ? flash[:notice] : '' %>
    </span>

    <% end %>
      <div class="msjReques"></div>
    <%= yield %>
  </body>
</html>
